{
  "manifest_version": 2,
  "name": "Detoxify",
  "version": "1.0",
  "description": "Customize your YouTube feed by hiding Shorts and filtering content.",
  "permissions": ["storage", "tabs"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "detoxify.png",
    "32": "detoxify.png",
    "48": "detoxify.png",
    "128": "detoxify.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background-script.js"],
    "persistent": false
  }
}
